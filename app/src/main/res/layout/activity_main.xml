<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_toolbar"
    tools:context="jee.techjd.jeeebooks.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="224dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:drawableTop="@drawable/ic_magnet"
            android:fontFamily="@font/firasans_medium"
            android:text="Physics"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="224dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:drawableTop="@drawable/ic_chemistry"
            android:fontFamily="@font/firasans_medium"
            android:text="Chemistry"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="224dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:drawableTop="@drawable/ic_pencil"
            android:fontFamily="@font/firasans_medium"
            android:text="Maths"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="224dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:drawableTop="@drawable/ic_paper"
            android:fontFamily="@font/firasans_medium"
            android:text="Previous Year"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button13"
            android:layout_width="224dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:drawableTop="@drawable/ic_testseries"
            android:fontFamily="@font/firasans_medium"
            android:text="TEST SERIES"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="224dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:drawableTop="@drawable/ic_formula"
            android:fontFamily="@font/firasans_medium"
            android:text="FORMULA BOOKLET"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/linktosite"

            />


    </LinearLayout>
</ScrollView>
